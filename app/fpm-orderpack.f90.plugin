'   3, 3.300', &
'   4, 4.400', &
'   5, 5.500', &
'   6, 10.100', &
'   7, 20.200', &
'', &
'AUTHOR', &
'   Michel Olagnon - Aug. 2000', &
'MAINTAINER', &
'   John Urban, 2022.04.16', &
'LICENSE', &
'   CC0-1.0', &
'']

