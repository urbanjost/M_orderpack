case('16','rank')

textblock=[character(len=256) :: &
'', &
'NAME', &
'   rank(3f) - [orderpack:RANK] produces an INDEX that sorts an input', &
'              array (optimized merge-sort)', &
'', &
'SYNOPSIS', &
'    Subroutine Rank (INVALS, IRNGT)', &
'', &
